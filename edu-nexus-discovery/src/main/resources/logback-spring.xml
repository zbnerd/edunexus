<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot default console appender with MDC support -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Custom console pattern with MDC fields -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr([%X{traceId:-},%X{spanId:-},%X{correlationId:-}]){yellow} %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wex"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="com.edunexusdiscovery" level="INFO"/>

    <!-- Framework loggers -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.cloud.netflix" level="INFO"/>

    <!-- Eureka-specific loggers -->
    <logger name="com.netflix.discovery" level="INFO"/>
    <logger name="com.netflix.eureka" level="INFO"/>

    <!-- Development-specific logging -->
    <springProfile name="dev | local">
        <logger name="com.edunexusdiscovery" level="DEBUG"/>
        <logger name="org.springframework.cloud.netflix" level="DEBUG"/>
    </springProfile>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
